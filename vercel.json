{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["sfo1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXTAUTH_URL": "https://crypto-racer.vercel.app",
    "NEXTAUTH_SECRET": "random_secret_key_replace_this",
    "NEXT_PUBLIC_SOLANA_NETWORK": "devnet",
    "NEXT_PUBLIC_SOLANA_RPC_HOST": "https://api.devnet.solana.com",
    "IRACING_USERNAME": "placeholder_username",
    "IRACING_PASSWORD": "placeholder_password",
    "GOOGLE_CLIENT_ID": "your_google_client_id",
    "GOOGLE_CLIENT_SECRET": "your_google_client_secret",
    "DATABASE_URL": "postgres://default:random_password@postgres-db-hostname:5432/verceldb"
  }
} 